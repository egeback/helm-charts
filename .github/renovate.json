{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "dependencyDashboard": true,
  "rebaseWhen": "behind-base-branch",
  "regexManagers": [
    {
      "fileMatch": ["(^|/)Chart\.yaml$"],
      "matchStrings": [
        "# renovate: datasource=(?<datasource>[a-z-]+?) depName=(?<depName>[^\s]+?)(?: (?:lookupName|packageName)=(?<packageName>[^\s]+?))?(?: versioning=(?<versioning>[a-z-]+?))?
appVersion: (?<currentValue>[^\s]+)"
      ]
    },
    {
      "fileMatch": ["(^|/)values\.yaml$"],
      "matchStrings": [
        "# renovate: datasource=(?<datasource>[a-z-]+?) depName=(?<depName>[^\s]+?)(?: (?:lookupName|packageName)=(?<packageName>[^\s]+?))?(?: versioning=(?<versioning>[a-z-]+?))?
\s+tag: (?<currentValue>[^\s]+)"
      ]
    }
  ],
  "packageRules": [
    {
      "matchManagers": ["helm-values", "helmv3", "regex"],
      "bumpVersion": "patch"
    },
    {
      "matchPackageNames": ["bjw-s/common"],
      "groupName": "bjw-s common chart"
    }
  ]
}
