{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "dependencyDashboard": true,
  "rebaseWhen": "behind-base-branch",
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": ["(^|/)Chart\\.yaml$"],
      "matchStrings": [
        "# renovate: datasource=(?<datasource>.+?) depName=(?<depName>.+?)(?:\\s+versioning=(?<versioning>.+?))?\\nappVersion:\\s*[\"']?(?<currentValue>.+?)[\"']?"
      ]
    },
    {
      "customType": "regex",
      "fileMatch": ["(^|/)values\\.yaml$"],
      "matchStrings": [
        "# renovate: datasource=(?<datasource>.+?) depName=(?<depName>.+?)(?:\\s+versioning=(?<versioning>.+?))?\\n\\s+tag:\\s*[\"']?(?<currentValue>.+?)[\"']?"
      ]
    }
  ],
  "packageRules": [
    {
      "matchManagers": ["helm-values", "helmv3", "custom.regex"],
      "bumpVersion": "patch"
    },
    {
      "matchPackageNames": ["bjw-s/common"],
      "groupName": "bjw-s common chart"
    },
    {
      "matchPackageNames": ["home-assistant/core"],
      "versioning": "docker"
    }
  ]
}
