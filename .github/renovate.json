{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "dependencyDashboard": true,
  "rebaseWhen": "behind-base-branch",
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": ["(^|/)Chart\\.yaml$"],
      "matchStrings": [
        "# renovate: datasource=(?<datasource>.+?) depName=(?<depName>.+?)(?: versioning=(?<versioning>.+?))?\\s+appVersion:\\s*[\"']?(?<currentValue>.+?)[\"']?\\s"
      ],
      "matchStringsStrategy": "any"
    },
    {
      "customType": "regex",
      "fileMatch": ["(^|/)values\\.yaml$"],
      "matchStrings": [
        "# renovate: datasource=(?<datasource>.+?) depName=(?<depName>.+?)(?: versioning=(?<versioning>.+?))?\\s+tag:\\s*[\"']?(?<currentValue>.+?)[\"']?\\s"
      ],
      "matchStringsStrategy": "any"
    }
  ],
  "packageRules": [
    {
      "matchManagers": ["helm-values", "helmv3", "custom.regex"],
      "bumpVersion": "patch"
    },
    {
      "matchPackageNames": ["bjw-s/common"],
      "groupName": "bjw-s common chart"
    },
    {
      "matchPackageNames": ["home-assistant/core"],
      "versioning": "home-assistant"
    }
  ]
}