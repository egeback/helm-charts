{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "dependencyDashboard": true,
  "rebaseWhen": "behind-base-branch",
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": ["(^|/)Chart\\.yaml$"],
      "matchStrings": [
        "# renovate: datasource=(?<datasource>[a-z-]+?) depName=(?<depName>[^\\s]+?)(?:\\s+(?:lookupName|packageName)=(?<packageName>[^\\s]+?))?(?:\\s+versioning=(?<versioning>[a-z-]+?))?\\nappVersion:\\s*[\"']?(?<currentValue>[^\\s\"']+)[\"']?"
      ]
    },
    {
      "customType": "regex",
      "fileMatch": ["(^|/)values\\.yaml$"],
      "matchStrings": [
        "# renovate: datasource=(?<datasource>[a-z-]+?) depName=(?<depName>[^\\s]+?)(?:\\s+(?:lookupName|packageName)=(?<packageName>[^\\s]+?))?(?:\\s+versioning=(?<versioning>[a-z-]+?))?\\n\\s+tag:\\s*[\"']?(?<currentValue>[^\\s\"']+)[\"']?"
      ]
    }
  ],
  "packageRules": [
    {
      "matchManagers": ["helm-values", "helmv3", "custom.regex"],
      "bumpVersion": "patch"
    },
    {
      "matchPackageNames": ["bjw-s/common"],
      "groupName": "bjw-s common chart"
    },
    {
      "matchPackageNames": ["home-assistant/core"],
      "versioning": "home-assistant"
    }
  ]
}
